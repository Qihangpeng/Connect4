<html>
	<title><%=playerA%> Vs. <%=playerB%></title>
    
	<head>Welcome come! <%=user%></head>
    <div><%=playerA%> Vs. <%=playerB%></div>
         <style>
              #chatroom { list-style-type: none; }
              #chatroom li { padding: 5px 10px; }
              #chatroom li:nth-child(odd) { background: #eee; }
        </style>
    </head>
	<body onload = initGame('<%=user%>','<%=gid%>')>
	<br>
	<button type = 'buttton' onclick = logout('<%=user%>') style = 'position:absolute; top:10px; left:645px;'>Log out</button>
	<div style='position:absolute; top:50px;'>
        <div>
            <% for(i=0;i<=6;i++){ %>
                <button style='position:absolute; left:<%=i*70 + 15%>px; top:10px'id = '<%=i%>' onclick = "drop('<%=user%>',id ,'<%=gid%>')">Drop</button>
            <%}%>
        <div style='position:absolute; top:40px;'>
		<canvas id = "board" width = "490" height = "420" style="border:1px solid; "></canvas>
    </div>
	<div>
		<p>
			<button type = "button" onclick = surrender('<%=user%>','<%=gid%>') style = 'height:40px; position: absolute; top:50px; left:540px;'>Surrender</button>
		</p>
        
		<div id = "chatroom" style="overflow-y:scroll; height:200px; width:600px; border: 1px solid; position:absolute; top:480px;">
        </div>
        <div style='position:absolute; top:700px;'>
            <input type = "textbox" id = "message" style ="width:650px;"></input>
            <button type = "button" onclick= send(<%=gid%>,'<%=user%>') style='position:relative; left:650px; top:-21px;'>Send</button>
        </div>
        <div id = 'colorCode' style = "position: absolute; left:500px; top :120px;">Black: </div>
        <div id = 'yourTurn' style = "position: absolute; left:500px; top :180px;"></div>
        <div id = 'winmsg' style = "position: absolute; left:500px; top :240px;"></div>
        
        <input id = players value= '<%=playerA%>/<%=playerB%>' hidden></input>
		
	</div>
    
        
    

	</body>
	<script src = /Script.js></script>
    <script src="/socket.io/socket.io.js"></script>

</html>
